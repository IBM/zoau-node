{
  "env": {
    "commonjs": true,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "brace-style": [
      "error",
      "1tbs"
    ],
    "camelcase": "error",
    "curly": [
      "error",
      "all"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "ArrayExpression": 1,
        "CallExpression": {
          "arguments": "first"
        },
        "FunctionDeclaration": {
          "parameters": "first"
        },
        "FunctionExpression": {
          "parameters": "first"
        },
        "MemberExpression": "off",
        "ObjectExpression": 1,
        "VariableDeclarator": "first"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "warn",
      80,
      {
        "ignoreRegExpLiterals": true,
        "ignoreUrls": true
      }
    ],
    "no-trailing-spaces": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-useless-escape": "off",
    "no-var": "error",
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-infix-ops": "error",
    "spaced-comment": [
      "error",
      "always",
      {
        "block": {
          "exceptions": ["*"]
        }
      }
    ]
  }
}
